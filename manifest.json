{
  "manifest_version": 3,
  "name": "Download Pins/Boards Add-on",
  "version": "0.4.2",
  "author": "Yuilix",
  "description": "Collect Pinterest board media by fast auto-scroll, keep results, and download as a single ZIP.",
  "action": {
    "default_title": "Download Pins/Boards Add-on",
    "default_popup": "popup.html",
    "default_icon": {
      "128": "Pinterest.png"
    }
  },
  "icons": {
    "128": "Pinterest.png"
  },
  "permissions": ["activeTab", "scripting", "downloads", "storage", "offscreen"],
  "host_permissions": [
    "https://www.pinterest.com/*",
    "https://*.pinterest.com/*",
    "https://i.pinimg.com/*"
  ],
  "background": {
    "service_worker": "sw.js"
  }
}